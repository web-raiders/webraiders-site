{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": "src",
    "jsx": "react-jsx",
  },
  "include": ["src"]
}
